<div class="container">

  <p id="notice"><%= notice %></p>

  <div class="row">
    <div class="col-sm-2 ml-auto">
      <%= link_to "Create Payment", { controller: "payments", action: "new" }, class:  "btn btn-info"%>
    </div>
  </div>

  <br/>

  <div class="row">
    <div class="col-sm">
      <div>Payments from ... TODO</div>
    </div>
  </div>

  <br/>

  <table class="table table-striped">
    <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Dates</th>
      <th scope="col">Creator</th>
      <th scope="col">Actions</th>
    </tr>
    </thead>

    <tbody>
    <%i = 0 %>
    <% @payments.each do |payment| %>
      <tr>
        <th scope="row"> <%= i += 1 %> </th>

        <td><%= payment.get_formatted_starts_at%> - <%= payment.get_formatted_ends_at %></td>
        <td><%= payment.user.email %></td>
        <td>
          <% if user_signed_in? && current_user.email == payment.user.email %>
            <%= link_to 'Destroy', payment, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
          <% end %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>

</div>
