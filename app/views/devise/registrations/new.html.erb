<div class="container">

  <div class="alert alert-info" role="alert">
    Welcome to Application. Please Register.
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="form-group row justify-content-md-center">
      <%= f.label :Login, class: "col-sm-2 col-form-label" %>
      <div class="col-sm-5">
        <%= f.text_field :login,
                         autofocus: true,
                         autocomplete: "off",
                         placeholder: "Login",
                         class: "form-control" %>
      </div>
    </div>

    <div class="form-group row justify-content-md-center">
      <%= f.label :Email, class: "col-sm-2 col-form-label"%>
      <div class="col-sm-5">
        <%= f.email_field :email,
                          autocomplete: "email",
                          placeholder: "Email",
                          class: "form-control" %>
      </div>
    </div>

    <div class="form-group row justify-content-md-center">
      <%= f.label :Password, class: "col-sm-2 col-form-label" %>
      <div class="col-sm-5">
        <%= f.password_field :password,
                             placeholder: "Password",
                             class: "form-control" %>
      </div>
    </div>

    <div class="form-group row justify-content-md-center">
      <div class="col-sm-2"></div>
      <div class="col-sm-5">
        <%= f.submit "Register", class: "btn btn-info col-sm" %>
      </div>
    </div>

  <% end %>

  <%= render "devise/shared/links" %>

</div>